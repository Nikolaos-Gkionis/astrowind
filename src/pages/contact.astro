---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Plain HTML Form for Netlify ******************* -->
  <form name="contactUs" method="POST" data-netlify="true" data-netlify-honeypot="bot-field" action="/success">
    <input type="hidden" name="bot-field" />
    <input type="hidden" name="form-name" value="contactUs" />
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" required />
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" name="email" id="email" required />
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea name="message" id="message" required></textarea>
    </div>
    <div class="disclaimer">
      By submitting this contact form, you acknowledge and agree to the collection of your personal information.
    </div>
    <button type="submit">Send Message</button>
    <div>Our support team typically responds within 24 business hours.</div>
  </form>

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `Chat with us for inquiries related to our packages, payment issues or general questions about the prototype's functionality.`,
      },
      {
        title: 'Contact sales',
        description:
          'Chat with us for questions about package options, increasing or decreasing resource, inquiries about specific project issues, etc.',
      },
      {
        title: 'Ongoing support',
        description:
          'Chat with us for Private Beta options, continued support or if you cannot get out of the traditional procurement resourcing options',
      },
      {
        title: 'Phone',
        description: '0800 669 6250',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'support@understairs.ltd',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Horwich, Bolton, BL6 7AF, United Kingdom',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
