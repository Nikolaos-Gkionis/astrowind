---
import Layout from '../../layouts/PageLayout.astro';

import Hero from '../../components/widgets/Hero.astro';
import CallToAction from '../../components/widgets/CallToAction.astro';

const metadata = {
  title: 'Social Impact',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="Social Impact"
    title="We are a small and nimble team"
    subtitle="We believe in the triple bottom line. People, Planet, Profit."
    actions={[
      { variant: 'primary', text: 'Contact us', href: '/contact', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Learn more', href: '/platform/net-zero' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1469571486292-0ba58a3f068b?q=80&w=2970&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Magnet attracting screws. Social Impact',
    }}
  />

  <CallToAction
    title="Coming soon"
    subtitle="We are working on the content of these page. You will see them very soon. Stay tuned Stay tuned!"
  />
</Layout>
