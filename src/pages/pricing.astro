---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Fixed Pricing for Every Need"
    subtitle="Choose the perfect package that aligns with your projects. No hidden costs or unexpected charges."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: 'basic',
        subtitle: 'Optimal choice for single resource use',
        price: 10000,
        period: 'per month',
        items: [
          {
            description: '1 person resource',
          },
          {
            description: 'Full calendar month',
          },
          {
            description: 'Designer or Researcher',
          },
          {
            description: 'Ideal for early Alpha teams',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
      },
      {
        title: 'standard',
        subtitle: 'Optimal choice for small teams',
        price: 50000,
        period: 'Per Month',
        items: [
          {
            description: '5 persons resource',
          },
          {
            description: 'Full calendar month',
          },
          {
            description: 'Designer , Researcher or Developer',
          },
          {
            description: 'Business Analyst or QA Tester',
          },
          {
            description: 'Ideal for a Project Manager with a limited budget',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'premium',
        subtitle: 'Optimal choice for Larger teams',
        price: 120000,
        period: 'Per Month',
        items: [
          {
            description: 'Traditional team of 10 resources',
          },
          {
            description: 'Embeded in an Agile / Scrum team',
          },
          {
            description: 'Fixed contract - minimum term 6 months',
          },
          {
            description: 'Ideal for larger Departments with limited ability to flex resource',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '/contact',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our packages"
    columns={2}
    items={[
      {
        title: 'Fixed Pricing Packages',
        description:
          'Choose from a range of pricing packages designed to accommodate different budgets and requirements.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each package, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Secure payment gateways to protect your financial information during transactions.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Upgrade Value',
        description: 'Upgrade to higher-tier packages to scale your team as your needs change.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'No Long Term Commitment',
        description: 'Cancel at any time. No long term contracts. No penalties.',
        icon: 'tabler:chevrons-down',
      },
      {
        title: '24H support',
        description: 'Questions answered via email or phone, every calendar day. Excluding Sundays and Bank Holidays',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey from Discovery to Delivery!"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore packages',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a package',
        icon: 'tabler:number-2',
      },
      {
        title: 'Contact us',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review requirements',
        icon: 'tabler:number-4',
      },
      {
        title: 'Agree package details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Sign your subscription',
        icon: 'tabler:number-6',
      },
      {
        title: 'Start our journey together',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right package is important, and we're here to answer your questions. If you have queries about our packages, you're in the right place."
    columns={1}
    items={[
      {
        title: 'Do the packages come with customer support?',
        description:
          'Absolutely, all packages include access to our dedicated customer support to assist you with any queries or concerns.',
      },
      {
        title: 'Is there a trial period for the different packages?',
        description:
          "Unfortunately, we don't offer trial periods for the packages. However, you can check out our blog section to preview the quality of our prototypes.",
      },
      {
        title: 'Can I switch between packages?',
        description:
          'Certainly! You can easily add more packages, or you can pause and restart at any time, to find the one that best suits your evolving requirements.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept major credit cards and online payment methods to ensure a convenient and secure transaction process. We use Stripe to handle all our transactions.',
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description:
          'No, the subscription cost covers all the cost involved. There are no hidden fees or extra charges.',
      },
      {
        title: 'Do you require a Statement of Work (SOW)?',
        description:
          'No, we do not require a Statement of Work (SOW). This is how we can keep our prices low and competitive. Reducing administration burden along with cost',
      },
      {
        title: 'What happens if I need more resources than the largest package?',
        description: 'We can create a custom package for you. Please contact us to discuss your requirements.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to boost your projects?"
    subtitle="Join our  satisfied customers who have benefited from our packages."
    actions={[
      {
        variant: 'primary',
        text: 'Start now',
        href: '/contact',
      },
    ]}
  />
</Layout>
