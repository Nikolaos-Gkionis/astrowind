---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Design Prototypes',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Work with us',
        href: '/contact',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image-2.png', alt: 'Question one image' }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight"> UK Government </span> Prototypes <span
        class="hidden sm:inline">designed</span
      >
      with the GDS Design System
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Design Prototypes</span> is a Prototype as a Service. A subscription model for individual
        contributors or fully fledged teams.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Prototypes: Production-ready.</span>
      Suitable for Government departments and local councils, rapid prototyping in a novel and different approach.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="How we do it"
    title="What you get with "
    subtitle="One of the novel approaches to designing GDS type prototypes currently on the market. Most comprehensive and easy to intergrate solution for your needs."
    items={[
      {
        title: 'Novel Practices',
        description:
          'Creating rapid prototypes, highly functional with minimal friction and research that deliver exceptional and lasting value.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Excellent Delivery Speed',
        description:
          'Having a great and higly funtional prototype increases speed from idea to usability testing and minimal iteration to production',
        icon: 'tabler:rocket',
      },
      {
        title: 'API integrations',
        description:
          'Real data from real sources, our prototypes mimic the real app down to the API intergrations, only for security reasons would we use synthetic data.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Open to new ideas and contributions',
        description:
          'Living a culture that is open to new ideas and contributions is integral to fostering innovation, collaboration, aiding a fast delivery.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Behind the scenes"
    title="Design Prototypes' Blueprint: Speed Meets Functionality!"
    items={[
      {
        title: 'Built only for the GDS Front End',
        description:
          'Benefiting from the performance and developer-friendly features of this accesible Front End library.',
      },
      {
        title: 'Styled using govuk CSS',
        description:
          'Facilitating rapid design and consistent styling with this highly accessibility focused CSS framework.',
      },
      {
        title: 'Design lead, Data driven',
        description:
          'Design first, research and user testing second. Get a highly functional prototype in front of users now.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Design on new foundations</h3>
      Avoid the friction of neverending research and design, get a highly functional prototype in front of users in a fraction
      of the time.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Scale fast, pause faster',
        description: `Based on your needs we can scale from a single designer to a full Alpha team. Pause anytime no questions asked.`,
      },
      {
        title: 'Multiple layout resources, no lock in',
        description:
          'Your needs, we provide the resources to allow you to take the prototype and run with it, we find the right people.',
